<%= simple_form_for [:admin, @property], :html => { :class => 'form-horizontal' } do |f| %>
<% if @property.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:</h2>

  <ul>
    <% @property.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="widget-box">
  <div class="widget-title">
    <span class="icon">
      <i class="icon-align-justify"></i>                  
    </span>
    <h5>Endereço</h5>
  </div>
  <div class="widget-content nopadding">

    <div class="row-fluid">
      <div class="field span6">
        <div class="span12">
          <%= f.input :address_name, placeholder: 'Travessa Reis', :input_html => { :class => "span12" }%>
        </div>
      </div>
      <div class="field span2">
        <div class="span12">
          <%= f.input :address_number, placeholder: '250', :input_html => { :class => "span12" }%>
        </div>
      </div>
      <div class="field span3">
        <div class="span12">
          <%= f.association :district, :input_html => { :class => "span12" }%>
        </div>
      </div>
    </div>

    <div class="row-fluid">
      <div class="field span6">
        <div class="span12">
          <%= f.input :address_complement, placeholder: 'Casa branca', :input_html => { :class => "span12" }%>
        </div>
      </div>
      <div class="field span6">
        <div class="span12">
          <%= f.input :address_reference, placeholder: 'Ao lado da Igreja', :input_html => { :class => "span12" }%>
        </div>
      </div>
    </div>

  </div>  
</div>

<div class="widget-box">
  <div class="widget-title">
    <span class="icon">
      <i class="icon-align-justify"></i>                  
    </span>
    <h5>Medidas</h5>
  </div>
  <div class="widget-content nopadding">

    <div class="row-fluid">
      <div class="field span6">
        <div class="span12">
          <%= f.input :privative_area, placeholder: '120', :input_html => { :class => "span12" }, hint: 'em metros quadrados. Ex.: 1000'%>
        </div>
      </div>
      <div class="field span6">
        <div class="span12">
          <%= f.input :constructed_area, placeholder: '120', :input_html => { :class => "span12" }, hint: 'em metros quadrados. Ex.: 1000'%>
        </div>
      </div>
    </div>

    <div class="row-fluid">
      <div class="field span6">
        <div class="span12">
          <%= f.input :total_area, placeholder: '120', :input_html => { :class => "span12" }, hint: 'em metros quadrados. Ex.: 1000'%>
        </div>
      </div>
      <div class="field span6">
        <div class="span12">
          <%= f.input :terrain_area, placeholder: '120', :input_html => { :class => "span12" }, hint: 'em metros quadrados. Ex.: 1000'%>
        </div>
      </div>
    </div>

  </div>  
</div>

<div class="widget-box">
  <div class="widget-title">
    <span class="icon">
      <i class="icon-align-justify"></i>                  
    </span>
    <h5>Dados sobre o Imóvel</h5>
  </div>
  <div class="widget-content nopadding">

    <div class="row-fluid">
      <div class="field span3">
        <div class="span12">
          <%= f.input :bedrooms, collection: 1..10, prompt: "Bedrooms", placeholder: '120', :input_html => { :class => "span12" }%>
        </div>
      </div>
      <div class="field span3">
        <div class="span12">
          <%= f.input :suits, collection: 1..10, prompt: "Suits", placeholder: '120', :input_html => { :class => "span12" }%>
        </div>
      </div>
      <div class="field span3">
        <div class="span12">
          <%= f.input :bathrooms, collection: 1..10, prompt: "Bathrooms", placeholder: '120', :input_html => { :class => "span12" }%>
        </div>
      </div>
      <div class="field span3">
        <div class="span12">
          <%= f.input :garages, collection: 1..10, prompt: "Garages", placeholder: '120', :input_html => { :class => "span12" }%>
        </div>
      </div>
    </div>

    <div class="row-fluid">
      <div class="field span6">
        <div class="span12">
          <%= f.input :furnished, :input_html => { :class => "span12" }%>
        </div>
      </div>
      <div class="field span6">
        <div class="span12">
          <%= f.input :construction_year, collection: 1950..2015, prompt: "Select the year", :input_html => { :class => "span12" }%>
        </div>
      </div>
    </div>

    <div class="row-fluid">
      <div class="field span12">
        <div class="span12">
          <%= f.input :description, placeholder: 'bla bla bla', :input_html => { :class => "span12" }%>
        </div>
      </div>
    </div>

  </div>  
</div>

<div class="widget-box">
  <div class="widget-title">
    <span class="icon">
      <i class="icon-align-justify"></i>                  
    </span>
    <h5>Dados Comerciais</h5>
  </div>
  <div class="widget-content nopadding">

    <div class="row-fluid">
      <div class="field span6">
        <div class="span12">
          <%= f.input :sell_price, placeholder: '120', :input_html => { :class => "span12" }, hint: 'em reais. Ex.: 100000 para R$100.000,00'%>
        </div>
      </div>
      <div class="field span6">
        <div class="span12">
          <%= f.input :client_price, placeholder: '120', :input_html => { :class => "span12" }, hint: 'em reais. Ex.: 100000 para R$100.000,00'%>
        </div>
      </div>
    </div>
  </div>  
</div>

<div class="actions">
  <%= f.button :submit, :class => 'btn btn-primary' %>
</div>


<% end %>
