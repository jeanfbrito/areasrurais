<% flash.each do |key, value| %>
  <div class="<%= flash_class(key) %>">
    <%= value %>
  </div>
<% end %>

<%= simple_form_for(@contact_message, html: { class: 'form-horizontal contact-agent-form' }) do |f| %>

    <div class="row-fluid">
      <div class="field span6">
        <div class="span12">
          <%= f.input :name, placeholder: 'Nome', :input_html => { :class => "span12" }%>
        </div>
      </div>
      <div class="field span6">
        <div class="span12">
          <%= f.input :city, placeholder: 'Taquara - RS', :input_html => { :class => "span12" }%>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="field span6">
        <div class="span12">         
          <%= f.input :email, placeholder: 'nome@email.com', :input_html => { :class => "span12" }%>
        </div>
      </div>
      <div class="field span6">
        <div class="span12">
          <%= f.input :phone, placeholder: '(51) 9776-6603', :input_html => { :class => "span12" }%>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="field span12">
        <div class="span12">
          <%= f.input :message, :input_html => { :class => "span12", :rows => "4" }, placeholder: 'Escreva aqui a sua mensagem.'%>
        </div>
      </div>
    </div>
    <div class="divider"></div>
    <div class="button-align">
      <div class="actions">
        <%= f.button :submit, :class => 'btn btn-primary' %>
      </div>
    </div>

  
<% end %>
