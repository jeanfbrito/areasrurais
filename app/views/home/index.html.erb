<section id="main">
	<!-- Slider start-->
	<div id="slide-wrapper">

		<div id="banner">  				
			<% @banner.each do |banner|%> 
			<div class="oneByOne_item"> 
				<img src="<%= banner.get_cover.file.thumb('940x340#').url %>" alt="Placeholder" class="bigImage">
				<span class="slide5Txt1" data-animate="fadeInLeftBig">Fazenda à venda</span>								
				<span class="slide5Txt2" data-animate="fadeInRightBig">R$1.000.000 | Olhos D'Agua, Taquara - RS</span>																						
			</div>	
			<% end %>
		</div>    

	</div>	<!-- end slider -->		  	

	<div class="body-text">

		<div class="container-fluid">

			<div class="row-fluid">

				<!--west pane span9-->
				<div class="span9">
					<div class="row-fluid">
						<h1>Destaques da semana</h1>
					</div>
					<div class="row-fluid hotproperties">
						<% @properties.each do |property| %>
						<div class="span4 set-equal-heights-js">
							<div class="thumbnail">
								<a href="<%= property_path(property) %>">
									<img src="<%= property.get_cover.file.thumb('221x147#').url %>" alt=""class="thumbnail">
								</a>

								<div class="caption">
									<a href="<%= property_path(property) %>" class="prop-title">Property Name, Toronto ON</a>
									<p class="size">Bed: 5 • Bath: 2 • Park 2</p>
									<p class="price">$259,000</p>
								</div>
							</div>
						</div>
						<% end %>
						<div class="clearfix"></div>
					</div>
				</div><!--end of west pane span9-->

				<!--east pane with width of span3-->
				<div class="span3">	
<!--
"Quick Search" Widget

SPECIAL NOTE: Please leave the inline style for <Select></Select> "width:100%",
the width is automatically "Re-adjusted" with javascript
See "config.js" for more details	
-->
<%= render "shared/quicksearch"%>

<!-- Start Zone Alert -->
<div class="qbox">
	<h3><i class="icon-bullhorn pull-right"></i>Venda seu Imóvel</h3>
	<div>
		<p>Teremos o maior prazer em vender o seu imóvel. Entre em contato que nós ligamos para você.</p>
		<a href="/contato" class="btn btn-small">Clique aqui</a>
	</div>

</div><!-- end Zone Alert -->

</div><!--end of span3-->

</div>

</div>

</div>
</section><!--end section-->
