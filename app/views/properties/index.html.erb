<section id="main">
	<div class="body-text">
		<div class="container-fluid">
			<div class="row-fluid">

				<div class="span9 listing-js">

					<!-- page title with dropdown -->
					<h1>Latest Listings</h1>
					<div class="container-fluid">
						<div class="row-fluid">
							<div class="span7 dropdown-results">
								<p>Showing 1 - 8 of 255 results</p>
							</div>
							<div class="span5">
								<select id="sort" name="sort">
									<option value="pmrank">Sort by Popularity</option>
									<option value="price">Sort by Price: Low to High</option>
									<option value="-price">Sort by Price: High to Low</option>
								</select>
							</div>
						</div>
					</div>
					<!-- end page title -->

					<!--start list-->
					<% @properties.each do |property| %>
					<div class="container-fluid">
						<div class="row-fluid">
							<div class="span4">
								<a href="<%= property_path(property) %>">
									<img src="<%= property.get_cover.file.thumb('220x165#').url %>" alt="Placeholder Image" />
								</a>
								<span class="sticker sticker-hot">Hot</span>
							</div>
							<div class="span8">
								<a href="<%= property_path(property) %>" class="prop-title">Property Name, Toronto ON</a>
								<p class="size">
									<% if have_value(property.bedrooms) %>
									• Quartos: 	<%= property.bedrooms %> 
									<% end %>
									<% if have_value(property.suits) %>
									• Suites: <%= property.suits %> 
									<% end %>
									<% if have_value(property.bathrooms) %>
									• Banheiros: <%= property.bathrooms %> 
									<% end %>
									<% if have_value(property.garages) %>
									• Vagas de garagem: <%= property.garages %> 
									<% end %>
								</p>
								<p class="price">
									<% if have_value(property.sell_price) %>
									<%= number_to_currency(property.sell_price) %>
									<% else %>
									Consulte o valor
									<% end %>
								</p>
								<p class="description">
									<%= truncate property.description, length: 160 %>
								</p>
								<!-- Short List Btns -->
								<ul class="list-btns">
									<li><a href="<%= property_path(property) %>"><i class="icon-info-sign"></i> Exibir detalhes </a></li>
								</ul>
								<!-- end short list -->
							</div>
						</div>
					</div>
					<% end %>
					<!--end list-->

					<!--start list-->
					<div class="container-fluid">
						<div class="row-fluid">
							<div class="span4">
								<a href="property.html"><img src="http://placehold.it/220x165/E37F14/FFFFFF" alt="Placeholder Image" /></a>
								<span class="sticker sticker-sold">SOLD</span>
							</div>
							<div class="span8">
								<a href="property.html" class="prop-title">Property Name, Toronto ON</a>
								<p class="size">Bedrooms: 5 • Bathrooms: 2 • Parking 2</p>
								<p class="price">$259,000</p>
								<p class="description">
									Maecenas nec odio et ante tincidunt tempus. Donec vitae sapien ut libero venenatis faucibus. Nullam quis ante. 
									Maecenas nec odio et ante tincidunt tempus. Donec vitae sapien ut libero venenatis faucibus. Nullam quis ante.
								</p>
								<!-- Short List Btns -->
								<ul class="list-btns">
									<li><a href="javascript:void(0);" id="property_2" class="add-to-list-js" 
										data-shortlist="<img src='http://placehold.it/220x165/E37F14/FFFFFF' alt='Placeholder Image'>
										<div><a href='javascript:void(0);' id='property_2'>Property Name</a>$259,000</div>">
										<i class="icon-plus-sign"></i>Short List</a></li>
										<li><a href="property.html"><i class="icon-info-sign"></i>View Details</a></li>
									</ul>
									<!-- end short list -->
								</div>
							</div>
						</div>
						<!--end list-->

						<!-- start paging -->
						<div class="container-fluid">
							<div class="row-fluid" style="border:none;">
								<div class="span12">
									<div class="pagination pagination-centered">
										<ul>
											<li><a href="javascript:void(0)">« Prev.</a></li>
											<li><a href="javascript:void(0)">1</a></li>
											<li><a href="javascript:void(0)">2</a></li>
											<li><a href="javascript:void(0)">3</a></li>
											<li><a href="javascript:void(0)">4</a></li>
											<li><a href="javascript:void(0)">5</a></li>
											<li><a href="javascript:void(0)">6</a></li>
											<li><a href="javascript:void(0)">7</a></li>
											<li><a href="javascript:void(0)">8</a></li>
											<li><a href="javascript:void(0)">Next »</a></li>
										</ul>
									</div>
								</div>
							</div>
						</div>
						<!-- end paging -->
					</div>
					<!-- end listing-js -->

